{
  "name": "plugin-tapestry",
  "description": "A hapijs plugin to interface Tapestry",
  "version": "3.0.0",
  "homepage": "https://github.com/holidayextras/plugin-tapestry",
  "author": {
    "name": "Shortbreaks",
    "email": "shortbreaksdev@holidayextras.com"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:holidayextras/plugin-tapestry.git"
  },
  "license": "MIT",
  "main": "lib/pluginTapestry",
  "engines": {
    "node": ">= 6.9.4"
  },
  "scripts": {
    "ci": "node_modules/.bin/istanbul cover _mocha -- -R xunit > $CIRCLE_TEST_REPORTS/unit/results.xml",
    "lint": "node_modules/.bin/make-up -i eslint lib test",
    "prerelease": "node_modules/deployment-helpers/nodeApps/preRelease.sh",
    "pretest": "npm run prerelease",
    "test:coverage": "istanbul cover _mocha",
    "test": "npm run lint && npm run test:coverage"
  },
  "dependencies": {
    "tapestry": "git+ssh://git@github.com:holidayextras/tapestry.git#v2.0.1",
    "tapestry-exodus": "git+ssh://git@github.com:holidayextras/tapestry-exodus.git#v2.0.0",
    "tapestry-prismic": "git+ssh://git@github.com:holidayextras/tapestry-prismic.git#v2.2.0",
    "lodash": "4.17.4",
    "q": "1.5.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coverage-percentage": "0.0.2",
    "deployment-helpers": "git+ssh://git@github.com:holidayextras/deployment-helpers.git",
    "hapi": "17.1.1",
    "istanbul": "0.4.5",
    "make-up": "10.0.0",
    "mocha": "4.0.1",
    "sinon": "4.1.3",
    "sinon-chai": "^2.14.0"
  }
}
